#include "keys_ru.h"
#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

&mt {
    quick-tap-ms = <175>;
    flavor = "tap-preferred";
    require-prior-idle-ms = <150>;
    tapping-term-ms = <250>;
    retro-tap;
    hold-trigger-on-release;
};

&lt {
    quick-tap-ms = <175>;
    require-prior-idle-ms = <150>;
    tapping-term-ms = <250>;
    retro-tap;
    hold-trigger-on-release;
};

/ {
    behaviors {
        hml: home_row_mod_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;

            hold-trigger-key-positions = <5 6 7 8 9 15 16 17 18 19 25 26 27 28 29 33 34 35>;
            hold-trigger-on-release;
        };

        hmr: home_row_mod_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;

            hold-trigger-key-positions = <0 1 2 3 4 10 11 12 13 14 20 21 22 23 24 30 31 32>;
            hold-trigger-on-release;
        };
    };

    combos { compatible = "zmk,combos"; };

    macros {
        dotspace: dotspace {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp KP_DOT &kp SPACE>;
            label = "DOTSPACE";
        };

        lang: lang {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_CONTROL>,
                <&macro_wait_time 40>,
                <&macro_tap>,
                <&kp SPACE>,
                <&macro_wait_time 40>,
                <&macro_release>,
                <&kp LEFT_CONTROL>;

            label = "LANG";
            wait-ms = <20>;
            tap-ms = <20>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
  &kp Q  &kp W  &kp E  &kp R         &kp T                                   &kp Y           &kp U             &kp I      &kp O    &kp P
  &kp A  &kp S  &kp D  &kp F         &kp G                                   &kp H           &kp J             &kp K      &kp L    &kp SEMICOLON
  &kp Z  &kp X  &kp C  &kp V         &kp B                                   &kp N           &kp M             &kp COMMA  &kp DOT  &kp SLASH
                       &kp LEFT_ALT  &kp LEFT_COMMAND  &lt 1 SPACE    &mo 2  &kp LEFT_SHIFT  &kp LEFT_CONTROL
            >;

            display-name = "Base";
        };

        num {
            bindings = <
  &kp ESC           &kp C_BRI_DN  &kp KP_SLASH     &kp C_BRI_UP  &kp LG(LS(N4))                    &none  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &none
  &kp LEFT_SHIFT    &kp KP_MINUS  &kp KP_MULTIPLY  &kp KP_PLUS   &none                             &none  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &none
  &kp LEFT_CONTROL  &kp C_VOL_DN  &kp C_MUTE       &kp C_VOL_UP  &kp SPACE                         &none  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0
                                                   &kp LEFT_ALT  &kp LEFT_COMMAND  &none    &mo 2  &none  &mo 3
            >;

            display-name = "Nums";
        };

        nav {
            bindings = <
  &kp ESC           &kp F3  &kp F2  &kp F1        &kp F10                               &none           &kp BACKSPACE     &kp UP_ARROW    &none            &kp LC(LG(T))
  &kp LEFT_SHIFT    &kp F6  &kp F5  &kp F4        &kp F11                               &kp TAB         &kp LEFT_ARROW    &kp DOWN_ARROW  &kp RIGHT_ARROW  &kp LG(LC(E))
  &kp LEFT_CONTROL  &kp F9  &kp F8  &kp F7        &kp F12                               &kp ENTER       &kp DELETE        &none           &none            &lang
                                    &kp LEFT_ALT  &kp LEFT_COMMAND  &dotspace    &none  &kp LEFT_SHIFT  &kp LEFT_CONTROL
            >;

            display-name = "Nav";
        };

        sym {
            display-name = "Sym";
            bindings = <
  &kp LA(Q)  &kp LA(W)  &kp LA(E)  &kp LA(R)  &kp LA(T)                       &kp LA(Y)  &kp LA(U)  &kp LA(I)      &kp LA(O)    &kp LA(P)
  &kp LA(A)  &kp LA(S)  &kp LA(D)  &kp LA(F)  &kp LA(G)                       &kp LA(H)  &kp LA(J)  &kp LA(K)      &kp LA(L)    &kp LA(SEMI)
  &kp LA(Z)  &kp LA(X)  &kp LA(C)  &kp LA(V)  &kp LA(B)                       &kp LA(N)  &kp LA(M)  &kp LA(COMMA)  &kp LA(DOT)  &kp LA(SLASH)
                                   &none      &kp LEFT_SHIFT  &none    &none  &none      &none
            >;
        };
    };
};
